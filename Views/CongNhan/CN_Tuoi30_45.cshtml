@model PagedList.IPagedList<NKSLK.Models.DTO.CongNhan>

@using PagedList.Mvc

@using NKSLK.Models.DAO
@{ ViewBag.Title = "List";
    Layout = "~/Views/Shared/_adminLTE.cshtml";
}

<style>
    .pagination {
        display: inline;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            display: inline-block;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border-radius: 5px;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
                border-radius: 5px;
            }

    tr {
        text-align: center;
        background-color: #5A77C8;
    }

    td {
        text-align: left;
        background-color: white;
    }
</style>

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800" style="margin:20px 0px 20px 0px">Danh sách công nhân có tuổi từ 30 -45 </h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive" style="overflow: hidden">
            <div class="dataTables_wrapper dt-bootstrap4 no-footer" id="dataTable_wrapper">


                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="example2" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Họ Tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>Phòng ban</th>
                                    <th>Chức vụ</th>
                                    <th>Quê quán</th>
                                    <th>Lương HD</th>
                                    <th>Lương BH</th>
                                    <th>Tuổi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HoTen)
                                        </td>
                                        <td style="text-align:right">
                                            @{
                                                var ngaysinh = "";
                                                if (item.NgaySinh == null)
                                                {
                                                    ngaysinh = "";
                                                }
                                                else
                                                {
                                                    ngaysinh = item.NgaySinh.ToString().Substring(0, 10);
                                                }
                                            }
                                            @Html.DisplayFor(modelItem => ngaysinh)
                                        </td>
                                        <td style="text-align:left">
                                            @{
                                                var gt = "";
                                                if (item.GioiTinh == true)
                                                {
                                                    gt = "Nam";
                                                }

                                                else
                                                {
                                                    gt = "Nữ";
                                                }

                                            }
                                            @Html.DisplayFor(modelItem => gt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhongBan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChucVu)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QueQuan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LuongHD)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LuongBaoHiem)
                                        </td>
                                        <td>
                                            @{
                                                CongNhanDAO dao = new CongNhanDAO();
                                                int tuoi = dao.SoTuoi(item.MaCN);
                                            }
                                            @Html.DisplayFor(modelItem => tuoi)
                                        </td>
                                        <td>
                                            <a href="~/CongNhan/Edit/@item.MaCN">
                                                <i class="far fa-edit" style="margin: 0px 10px;"></i>
                                            </a>

                                            <a href="~/CongNhan/Delete/@item.MaCN" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                                <i class="far fa-trash-alt" style="margin: 0px 10px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5"></div>
                    <div class="col-sm-12 col-md-7">
                        <div class="pagination" id="dataTable_paginate" style="text-align:right">
                            @Html.PagedListPager(Model, pageNum => Url.Action("CN_Tuoi30_45", new { pageNum })

                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-left:50px;">
            @Html.ActionLink("Trở về", "Index")
        </div>
    </div>
</div>
