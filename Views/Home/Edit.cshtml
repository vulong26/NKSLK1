
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminLTE.cshtml";
}
@using NKSLK.Models.DTO;
@{ var cn = (CongNhan)ViewBag.cn; }

<form action="Edit" method="post" role="form" enctype="multipart/form-data">
    <input type="hidden" id="id" name="id" value="@cn.MaCN" />
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Chỉnh sửa </h3>


        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name">Họ Tên</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Tên công nhân" value="@cn.HoTen">
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label for="">Ngày sinh</label>
                        <input type="text" class="form-control" name="dob" id="dob" placeholder="Ngày sinh" value="@cn.NgaySinh">
                    </div>
                    <div class="form-group">
                        <label for="Gioitinh">Giới tính</label>
                        <select id="gt" name="gt" value="@cn.GioiTinh">
                            <option value="true">Nam</option>
                            <option value="false">Nữ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="phongban">Phòng ban</label>
                        <input type="text" name="phongban" class="form-control" id="phongban" value="@cn.PhongBan">
                    </div>
                    <div class="form-group">
                        <label for="chucvu">Chức vụ</label>
                        <input type="text" name="chucvu" class="form-control" id="chucvu" value="@cn.ChucVu">
                    </div>
                    <div class="form-group">
                        <label for="quequan">Quê Quán</label>
                        <input type="text" name="quequan" class="form-control" id="quequan" value="@cn.QueQuan">
                    </div>
                    <div class="form-group">
                        <label for="luonghd">Lương hợp đồng</label>
                        <input type="text" name="luonghd" class="form-control" id="luonghd" value="@cn.LuongHD">
                    </div>
                    <div class="form-group">
                        <label for="luongbh">Lương bảo hiểm</label>
                        <input type="text" name="luongbh" class="form-control" id="luongbh" value="@cn.LuongBaoHiem">
                    </div>
                </div>
                <!-- /.col -->
                


            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>
    <div class="box-footer">
        <input type="submit" class="btn btn-primary" value="Sửa" />
    </div>
</form>

