@model PagedList.IPagedList<NKSLK.Models.DTO.ThoiGianCaNhan_CongNhan>
@using PagedList.Mvc

@{
    ViewBag.Title = "ChiTietGioCongChuan";
    Layout = "~/Views/Shared/_adminLTE.cshtml";
}
<style>
    .pagination {
        display: inline;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            display: inline-block;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border-radius: 5px;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
                border-radius: 5px;
            }
</style>

<!-- Page Heading -->
<h1 class="h3 mb-2 text-bold" style="margin-left: 350px; font-family: 'Times New Roman', Times, serif;">Danh sách công nhân làm việc theo khoán</h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <i class="fa fa-arrow-left fa-2x" aria-hidden="true" style="margin: 20px;">
        @if (Session["GioCongChuan"].ToString() == "index" || Session["GioCongChuan"] == null)
        {
            @Html.ActionLink("Back to List", "index")
        }
        else if (Session["GioCongChuan"].ToString() == "TimKiem")
        {
            @Html.ActionLink("Back to List", "TimKiem")
        }
    </i>

    <div class="card-body">
        <div class="table-responsive" style="overflow: hidden">
            <div class="dataTables_wrapper dt-bootstrap4 no-footer" id="dataTable_wrapper">

                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="example2" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th style="width: 200px;">Họ tên</th>
                                    <th style="width: 200px;">Thời gian cá nhân</th>
                                    <th style="width: 200px;">Thời gian công chuẩn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HoTen)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianCaNhan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianCongChuan)
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-3"></div>
                    <div class="col-sm-12 col-md-8">
                        <div class="pagination" id="dataTable_paginate">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                            @Html.PagedListPager(Model, pageNum => Url.Action("ChiTietGioCongChuan", new { pageNum }))
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
