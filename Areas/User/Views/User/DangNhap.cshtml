
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_adminLTE.cshtml";
}


<h2>@ViewBag.ThongBao</h2>
<div class="main-content-agile">
    <div class="sub-main-w3">
        <div class="wthree-pro">
            <h2>Đăng nhập</h2>
        </div>
        <form action="#" method="post">
            <div class="pom-agile">
                <input placeholder="Tài khoản" name="txtTaiKhoan" class="user" type="text">

            </div>
            <div class="pom-agile">
                <input placeholder="Password" name="txtMatKhau" class="pass" type="password" required="">

            </div>
            <div class="sub-w3l">

                
                <h6><a href="#">Forgot Password?</a></h6>

                <div class="right-w3l">
                    <input type="submit" value="Đăng nhập">
                </div>

            </div>
        </form>
    </div>
</div>