
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminLTE.cshtml";
}
@using NKSLK.Models.DTO;
@{ var sp = (SanPham)ViewBag.sp; }

<form action="Edit" method="post" role="form" enctype="multipart/form-data">
    <input type="hidden" id="id" name="id" value="@sp.MaSP" />
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Chỉnh sửa </h3>


        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="tensp">Tên sản phẩm</label>
                        <input type="text" name="tensp" class="form-control" id="tensp" placeholder="Tên sản phẩm" value="@sp.TenSP">
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label for="sodk">Số đăng ký</label>
                        <input type="text" name="sodk" class="form-control" id="sodk" placeholder="Số đăng ký" value="@sp.SoDangKy">
                    </div>
                    <div class="form-group">
                        <label for="hsd">Hạn sử dụng</label>
                        <input type="text" name="hsd" class="form-control" id="hsd" value="@sp.HanSD">
                    </div>
                    <div class="form-group">
                        <label for="quycach">Quy cách</label>
                        <input type="text" name="quycach" class="form-control" id="quycach" value="@sp.QuyCach">
                    </div>
                    <div class="form-group">
                        <label for="ngaydk">Ngày đăng ký</label>
                        <input type="text" name="ngaydk" class="form-control" id="ngaydk" value="@sp.NgayDangKy">
                    </div>
                </div>
                <!-- /.col -->



            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>
    <div class="box-footer">
        <input type="submit" class="btn btn-primary" value="Sửa" />
    </div>
</form>

